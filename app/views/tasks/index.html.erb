<h1>My Tasks</h1>
<ul>
<% @tasks.each do |task| %>
  <li>
    <% if task.completed? %>
      <input type="checkbox" checked>
    <% else %>
      <input type="checkbox">
    <% end %>
    <%= link_to task.title, task_path(task) %>
    <%= link_to 'delete', task_path(task), method: :delete, data: {confirm: "Are you sure?"} %>
  </li>
<% end %>
</ul>

<br>

<%= link_to '+ Add a new task', new_task_path %>
