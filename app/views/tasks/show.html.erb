<div class="box">

<h1><%= @task.title %></h1>

<%= link_to 'Edit this task', edit_restaurant_path %>

</div>

<div class="task-description">
  <%= @task.details  %>
</div>

<div class="task-status">
  <% if @task.completed? %>
  <input type="checkbox" checked>  This task is completed
  <% else %>
  <input type="checkbox">  This task is completed
  <% end %>
</div>

<br>

<%= link_to 'Back to list', tasks_path %>
